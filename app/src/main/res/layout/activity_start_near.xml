<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:id="@+id/restaurant"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@color/FSQLime"
               
        
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant"
                    android:textColor="@color/purple_black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/near_by_icon_1"
                    android:layout_margin="10dp"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:id="@+id/movie_theater"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@color/black"
            
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theater"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cinema_icon"
                    android:layout_margin="20dp"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:id="@+id/shopping_mall"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@color/purple_black"
                
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mall"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopping_icon"
                    android:layout_margin="20dp"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:id="@+id/hospital"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@color/pink"
                
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospital"
                    android:textColor="@color/purple_black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hospital_icon"
                    android:layout_margin="20dp"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:id="@+id/school"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@color/orange"
                
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School"
                    android:textColor="@color/purple_black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/school_icon"
                    android:layout_margin="20dp"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:id="@+id/park"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@color/light_green_2"
                
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="park"
                    android:textColor="@color/purple_black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/park_icon"
                    android:layout_margin="20dp"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:id="@+id/atm"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@color/light_green"
                
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atm"
                    android:textColor="@color/purple_black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/atm_icon"
                    android:layout_margin="20dp"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:id="@+id/cafe"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="@color/yellow"
                
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafe"
                    android:textColor="@color/purple_black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cafe_icon"
                    android:layout_margin="20dp"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>



    </LinearLayout>



</androidx.core.widget.NestedScrollView>
