<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toTopOf="@+id/spr_search_type"
        android:id="@+id/txtplace"
        android:hint="Enter a Place"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spr_search_type"
        android:layout_marginTop="33dp" />
    <Spinner
        android:id="@+id/spr_search_type"
        android:layout_width="372dp"
        android:layout_height="38dp"
        android:layout_weight="2"
        tools:layout_editor_absoluteY="113dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/txtplace"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="157dp"
        android:layout_height="54dp"
        android:text="Search"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="228dp"
        android:layout_below="@+id/spr_search_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp" />


</RelativeLayout>
