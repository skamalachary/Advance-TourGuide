<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    tools:context=".customDialog.UpdateUserName"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:src="@drawable/ic_phone_android_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@null"
                />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginStart="5dp"
        />

            <EditText
                android:id="@+id/phone_input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="enter new number"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:background="@drawable/input_field_background1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:inputType="number"
                android:maxLength="10"
                />
</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/phone_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:text="cancel"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/phone_btn_update"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="verify"
                android:textColor="@color/white"

                />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        >
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="50dp"
        android:layout_gravity="center"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="verifying...."
        android:textColor="@color/black"
        android:gravity="center"
        />
    </LinearLayout>
</androidx.cardview.widget.CardView>
